@model bad_each_way_finder.Pages.RacesModel

@{
    var selectedRace = Model.SelectedRace;
}
<div id="selected-race">
@if (selectedRace != null)
{

        <div class="row border border-dark rounded p-3 mb-3 bg-green-bright">
            <div class="col-12">
                <h6 class="font-lg">
                    @selectedRace.EventName @selectedRace.EventDateTime.ToString("HH:mm") @selectedRace.SportsbookNumberOfPlaces
                    1/@selectedRace.SportsbookPlaceFractionDenominator
                </h6>
            </div>
        </div>
        <div class="row border border-dark rounded bg-blue-neutral p-1 mb-1 text-black text-center">
            <div class="col-3 text-start ps-4">
                RunnerName
            </div>
            <div class="col-1">
                Sbk Win
            </div>
            <div class="col-1">
                Exc Win
            </div>
            <div class="col-1">
                Win EV
            </div>
            <div class="col-1">
                Exc Place
            </div>

            <div class="col-1">
                Sbk Place
            </div>
            <div class="col-1">
                EV
            </div>
        </div>

        @foreach (var runner in selectedRace.Runners.OrderBy(r => r.WinRunnerOddsDecimal))
        {
            <div class="row border border-dark rounded bg-mintcream p-1 mb-1 text-center font-md">
                <div class="col-3 text-start font-lg">
                    @runner.RunnerOrder -
                    @runner.RunnerName

                </div>
                <div class="col-1">
                    @runner.WinRunnerOddsDecimal.ToString("0.00")
                </div>
                <div class="col-1">
                    @runner.ExchangeWinPrice.ToString("0.00")
                    <p><small>€@runner.ExchangeWinSize.ToString("0.00")</small></p>
                </div>
                <div class="col-1">
                    @{
                        var textWinEv = runner.WinExpectedValue > 0 ? "text-success" : "text-danger";
                    }
                    <span class="@textWinEv">
                        @runner.WinExpectedValue.ToString("0.000%")
                    </span>
                </div>
                <div class="col-1">
                    @runner.ExchangePlacePrice.ToString("0.00")
                    <p><small>€@runner.ExchangePlaceSize.ToString("0.00")</small></p>
                </div>
                <div class="col-1">
                    @runner.EachWayPlacePart.ToString("0.00")
                </div>
                <div class="col-1">
                    @{
                        var textEachWayEv = runner.EachWayExpectedValue > 0 ? "text-success" : "text-danger";
                    }
                    <span class="@textEachWayEv">
                        @runner.EachWayExpectedValue.ToString("0.000%")
                    </span>
                </div>
                <div class="col-1">
                </div>
            </div>
        }

}
else
{
    <div class="row border border-dark rounded bg-light p-3 mb-3">
        <div class="col-12">
            <h6 class="font-md">
                Please select a race
            </h6>
        </div>
    </div>
}
</div>

